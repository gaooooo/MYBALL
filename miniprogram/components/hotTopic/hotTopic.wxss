

/*模块标题样式 */
.common-subtitle {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    padding: 0 24rpx;
    background: #fff;
  }
  
  .common-subtitle-left {
    font-size: 34rpx;
    color: #333;
    font-weight: 500;
  }
  
  .common-subtitle-right {
    font-size: 26rpx;
    font-weight: 400;
    color: #959595;
    margin-right: 6rpx;
  }
  
/* 精选栏目菜单导航 */
.selected-nav {
    border-bottom: 16rpx solid #f5f7f7;
  }
  
  .selected-nav-list {
    display: flex;
    padding: 0 24rpx 40rpx;
    background: #fff;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  
  .selected-nav-item {  
    margin-right: 16rpx;
    margin-top: 15rpx;
    text-align: center;
  }
  
  .selected-nav-item image {
    float: left;
    width: 76rpx;
    height: 76rpx;
    border-radius: 6rpx;
    background: #f5f7f7;
    vertical-align: middle;
  }
  
  .selected-nav-item-text {
    display: block;
    width: 230rpx;
    float: left;
    margin-left: 10px;
    line-height: 26rpx;
    font-size: 26rpx;
    color: #333;
    text-align: left;
  }
  
  .selected-nav-item-text text {
    display: block;
  }
  